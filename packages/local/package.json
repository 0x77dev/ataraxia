  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.1",
    "@types/msgpack-lite": "^0.1.7",
    "@types/node": "^13.11.1",
    "jest": "^25.3.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
